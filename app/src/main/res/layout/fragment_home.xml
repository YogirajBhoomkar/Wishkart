<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEBEB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context=".mainscreen">


        <ScrollView
            android:id="@+id/scroll_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="56dp"
            android:scrollbarSize="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="12dp"
                    app:cardBackgroundColor="#EEEBEB">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbarSize="0dp"
                            android:layout_marginTop="30dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageButton"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="3dp"
                                        app:srcCompat="@drawable/download" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageButton1"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        app:srcCompat="@drawable/saleimg" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageButton2"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        app:srcCompat="@drawable/sale1" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageButton3"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        app:srcCompat="@drawable/sale1" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageButton4"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        app:srcCompat="@drawable/sale1" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageButton5"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        app:srcCompat="@drawable/download" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    android:layout_marginTop="0dp"
                    android:elevation="8dp"

                    android:paddingTop="10dp"
                    app:cardBackgroundColor="#ffff">

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:alignmentMode="alignMargins"
                        android:columnCount="3"
                        android:columnOrderPreserved="false"
                        android:paddingTop="10dp"
                        android:rowCount="2"

                        >


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_row="1"
                            android:layout_column="1" />

                        <ImageButton
                            android:id="@+id/plumber_btn"
                            android:layout_width="115dp"
                            android:layout_height="73dp"
                            android:layout_row="0"
                            android:layout_column="1"
                            app:srcCompat="@drawable/plum" />

                        <ImageButton
                            android:id="@+id/imageButton10"
                            android:layout_width="111dp"
                            android:layout_height="73dp"
                            android:layout_row="0"
                            android:layout_column="2"
                            app:srcCompat="@drawable/grocery" />

                        <ImageButton
                            android:id="@+id/imageButton11"
                            android:layout_width="111dp"
                            android:layout_height="74dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:padding="2dp"
                            app:srcCompat="@drawable/vege" />

                        <ImageButton
                            android:id="@+id/imageButton12"
                            android:layout_width="115dp"
                            android:layout_height="73dp"
                            android:layout_row="1"
                            android:layout_column="1"
                            app:srcCompat="@drawable/med" />

                        <ImageButton
                            android:id="@+id/imageButton13"
                            android:layout_width="111dp"
                            android:layout_height="74dp"
                            android:layout_row="1"
                            android:layout_column="2"
                            app:srcCompat="@drawable/clean" />

                        <ImageButton
                            android:id="@+id/electrician_btn"
                            android:layout_width="111dp"
                            android:layout_height="74dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            app:srcCompat="@drawable/elec" />

                        <com.google.android.material.bottomnavigation.BottomNavigationView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_row="0"
                            android:layout_column="1" />

                    </GridLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="12dp"
                    app:cardBackgroundColor="#EEEBEB">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbarSize="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageButto"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        android:padding="3dp"
                                        app:srcCompat="@drawable/download" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imaeButton1"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        app:srcCompat="@drawable/saleimg" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageButtn2"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        app:srcCompat="@drawable/sale1" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageutton3"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        app:srcCompat="@drawable/sale1" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageBtton4"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        app:srcCompat="@drawable/sale1" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp">

                                    <ImageButton
                                        android:id="@+id/imageButon5"
                                        android:layout_width="260dp"
                                        android:layout_height="145dp"
                                        app:srcCompat="@drawable/download" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/locationText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="#01C3FB"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:gravity="start|center_vertical"
            android:paddingStart="10dp"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />


    </RelativeLayout>
</FrameLayout>