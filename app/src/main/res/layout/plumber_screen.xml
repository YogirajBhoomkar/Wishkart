<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plumber_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".plumber_screen">


    <ScrollView
        android:id="@+id/scroll_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"

        android:scrollbarSize="0dp">

        <LinearLayout
            android:id="@+id/linear_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFCFC">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plum_bg" />

                <ImageView
                    android:id="@+id/imageView_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    app:srcCompat="@drawable/arrow1" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"


                android:paddingBottom="10dp"


                app:cardBackgroundColor="#ffff">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="248dp"
                    android:layout_gravity="center_horizontal"
                    android:alignmentMode="alignMargins"
                    android:background="#EEEBEB"
                    android:columnCount="3"
                    android:columnOrderPreserved="false"

                    android:rowCount="2"

                    >

                    <ImageButton
                        android:id="@+id/imageButton_tank"
                        android:layout_width="122dp"
                        android:layout_height="118dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        app:srcCompat="@drawable/water_tank" />

                    <ImageButton
                        android:id="@+id/imageButton_tap"
                        android:layout_width="122dp"
                        android:layout_height="118dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        app:srcCompat="@drawable/tap" />

                    <ImageButton
                        android:id="@+id/imageButton_bath"
                        android:layout_width="115dp"
                        android:layout_height="118dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        app:srcCompat="@drawable/bath" />

                    <ImageButton
                        android:id="@+id/imageButton_toilet"
                        android:layout_width="122dp"
                        android:layout_height="120dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:padding="2dp"
                        app:srcCompat="@drawable/toilet" />

                    <ImageButton
                        android:id="@+id/imageButton_blockage"
                        android:layout_width="122dp"
                        android:layout_height="120dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        app:srcCompat="@drawable/blockage" />

                    <ImageButton
                        android:id="@+id/imageButton_p_other"
                        android:layout_width="115dp"
                        android:layout_height="120dp"
                        android:layout_row="1"
                        android:layout_column="2"
                        app:srcCompat="@drawable/p_others" />

                </GridLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#ffff">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue">

                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>